<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/flipper_header"
        android:layout_width="match_parent"
        android:layout_height="230dp">

    </ViewFlipper>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <TextView
            android:id="@+id/txt_diy_task"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_txt_diy_task"
            android:gravity="center"
            android:text="自定义任务"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txt_water_task"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_txt_water_task"
            android:gravity="center"
            android:text="水任务"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lost_task"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_txt_lost_task"
            android:gravity="center"
            android:text="物品任务"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_more_task"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_txt_more_task"
            android:gravity="center"
            android:text="更多任务"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

</LinearLayout>
