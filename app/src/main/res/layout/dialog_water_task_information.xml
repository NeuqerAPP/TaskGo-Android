<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"

        >

        <ImageView
            android:id="@+id/img_address_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_task_address"/>


        <TextView
            android:id="@+id/txt_fix_address_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_address_number"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_address_number"
            android:text="宿舍号:"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_address_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_address_number"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@id/img_address_number"
            android:gravity="center"
            android:text="6077"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/img_water_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_address_number"
            android:layout_below="@id/img_address_number"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_water_task_type"
            />


        <TextView
            android:id="@+id/txt_fix_water_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_water_task_type"
            android:layout_alignLeft="@id/txt_fix_address_number"
            android:text="取水形式:"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/txt_water_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_water_task_type"
            android:layout_alignLeft="@id/txt_address_number"
            android:text="送水上门"
            android:textColor="@color/black"
            android:textSize="16sp"
            />


        <ImageView
            android:id="@+id/img_task_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_address_number"
            android:layout_below="@id/img_water_task_type"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_task_imformation"
            />

        <TextView
            android:id="@+id/txt_fix_remark_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_task_information"
            android:layout_alignLeft="@id/txt_fix_address_number"
            android:text="备注信息:"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_remark_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_address_number"
            android:layout_alignTop="@id/img_task_information"
            android:text="无"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_remark_information"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_task_btn_blue"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>
